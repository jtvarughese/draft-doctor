<!-- Section to display age, height, and weight -->
<span>
  <h2>Biometrics</h2>
  <h3>Age: <%= @player.age %></h3>
  <h3>Height(inches): <%= @player.height %></h3>
  <h3>Weight(lbs): <%= @player.weight %></h3>
</span>

<!-- Section to display injuries, min played, and SOS -->
<span>
  <h2>History</h2>
  <h3>Injuries: <%= @player.injuries %></h3>
  <h3>Minutes Played: <%= @player.minutes_played %></h3>
  <h3>S.O.S.: <%= @player.strength_of_schedule %></h3>
</span>

<!-- Section to display likelihood of injuries for specific position -->
<!-- and severity of injuries -->
<span>
  <h2>Spectrum</h2>
  <h3>Position Specific Injury Value: <%= @player.position_injury %></h3>
  <h3>Injury Severity Value: <%= @player.severity_of_injury %></h3>
</span>

<div id="chartdiv"></div>	

